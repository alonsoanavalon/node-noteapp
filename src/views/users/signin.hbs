<div class="row">

    <div class="col-md-4 mx-auto">
        <div class="card">


            <div class="card-header">
                Signin
            </div>
            <div class="card-body">

                <form action="/users/signin" class="text-center" method="POST">

     
                    <div class="form-group">
                        <input type="email" name="email" placeholder="Email" class="form-control" value = {{email}}>
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" placeholder="Password" class="form-control">
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block mx-auto">Signin</button>
                    </div>
                    
                                        
                </form>

            </div>
                
        </div>
    </div>

</div>